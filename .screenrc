# Fix escape delay
maptimeout 0

# Enable mouse support
termcapinfo xterm* ti@:te@
defscrollback 5000
mousetrack on

# Change key bindings
escape ^Bb

# Status line
hardstatus alwayslastline
hardstatus string "%{=bK}%-w%?%{= rW}%n %t%?%?%{=bK}%+w%? %=%{=bW} %c %m/%d"

# 256 colors
term screen-256color
